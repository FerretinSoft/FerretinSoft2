<Window x:Class="pe.edu.pucp.ferretin.view.MVentas.MV_TiposServiciosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MV_TiposServiciosWindow" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="tiposPromocion" Margin="5" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="1*" Binding="{Binding Nombre}" Header="Descripción"/>
                <DataGridTextColumn Width="1*" Binding="{Binding cantidadUnidades}" Header="Monto Base (S/.)"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Command="{Binding savePromocionCommand}" Margin="0,0,10,0" Height="30" Padding="10,0" Content="GUARDAR"/>
            <Button Command="{Binding cancelPromocionCommand}" Padding="10,0" Height="30" Content="CANCELAR" />
        </StackPanel>
    </Grid>
</Window>
