            Viewport="0,0,100,100" ViewportUnits="Absolute"/>
        </Grid.Background>
        <Button x:Name="homeBtn" Content="" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="32" Height="32" Click="homeBtn_Click" >
