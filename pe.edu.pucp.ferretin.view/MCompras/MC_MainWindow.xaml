        </Button>
        <Button x:Name="gRemisioinBtn" Content="" HorizontalAlignment="Left" Margin="108,300,0,0" VerticalAlignment="Top" Width="32" Height="32" RenderTransformOrigin="0.44,-0.101" Click="gRemisioinBtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Resources/forward_32.png"/>
            </Button.Background>
        </Button>

        <Label Content="Administración de Proveedores" HorizontalAlignment="Left" Margin="155,121,0,0" VerticalAlignment="Top" FontSize="16"/>

        <Label Content="Cotizaciones y Órdenes de Compra" HorizontalAlignment="Left" Margin="155,241,0,0" VerticalAlignment="Top" FontSize="16"/>

        <Label Content="Solicitudes de Abastecimiento" HorizontalAlignment="Left" Margin="155,181,0,0"  VerticalAlignment="Top" FontSize="16"/>

        <Label Content="Reportes de Compras" HorizontalAlignment="Left" Margin="155,359,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Guias de Remisión" HorizontalAlignment="Left" Margin="155,301,0,0" VerticalAlignment="Top" FontSize="16"/>

        <StatusBar Height="35" VerticalAlignment="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <Label Content="Jueves, 12/09/2013 02:24 p.m." HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" RenderTransformOrigin="0.474,-0.154" Width="171"/>
            </StatusBarItem>
            <StatusBarItem Grid.Column="1" HorizontalAlignment="Right">
                <Label Content="© 2013 Ferretin Corp" Width="134" Margin="0" HorizontalAlignment="Right"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
